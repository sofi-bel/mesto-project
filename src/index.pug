doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description" content="Mesto")
    meta(name="keywords" content="Project Mesto, Project Meston Y.Practicum, Y.Practicum, Sofi Bel")
    meta(name="author" content="Sofi Bel")
    link(
      rel="apple-touch-icon",
      href=require("./favicon/apple-touch-icon.png")
    )
    link(rel="manifest", href=require("./favicon/site.webmanifest"))
    link(
      rel="icon",
      href=require("./favicon/favicon.svg"),
      type="image/svg+xml"
    )
    link(rel="icon", href=require("./favicon/favicon.ico"), sizes="any")
    meta(name="google-site-verification" content="Ea9NWQU5CDgPbBBq3ivltxc9kZ43a4avIPfmgYW5bZM")
    title= htmlWebpackPlugin.options.title
  body.page.page_type_centered
    header.header.page__header
      .header__logo
    main.content.page__content
      section.profile.page__profile
        picture.profile__avatar-wrap
          source(
            srcset=require("./images/avatar.webp"),
            type="image/webp"
          )
          img.profile__avatar(
            src=src=require("./images/avatar.jpg"),
            alt="User avatar"
          )
        .profile__info
          .profile__title-wrapper
            h1.profile__title
              | Jacques-Yves Cousteau

            button.profile__button.profile__button_type_edit(type="button" aria-label="edit icon").


          p.profile__subtitle
            | Ocean explorer

        button.profile__button.profile__button_type_add(type="button" aria-label="Add Icon")
      section.places.page__places(aria-label="Place cards")
        ul.places__list
          template#card-template
            li.card
              button.card__button.card__button_type_delete(type="button" aria-label="Delete button")
              img.card__image
              .card__description
                h2.card__title
                button.card__button.card__button_type_like(type="button" aria-label="Like button")
    footer.footer.page__footer
      p.footer__copyright.text
        | Â© 2021
        a.footer__author-link.link(
          href="https://www.linkedin.com/in/sofi-bel/",
          target="_blank",
          rel="noopener noreferrer"
        )
          | Sofi Bel

    .popup.page__popup.popup_type_edit-profile
      .popup__container
        button.popup__close-button.popup__close-button_type_edit-profile(type="button" aria-label="close icon")
        h2.popup__title Edit profile
        form.popup__form.form.form_type_edit-profile(name="popup")
          label.form__label.visually-hidden(for="name")
            | Enter your name
          input.form__input.form__input_type_name(name="name" id="name" type="text" value="Jacques-Yves Cousteau")
          label.form__label.visually-hidden(for="job")
            | Enter your job
          input.form__input.form__input_type_job(name="job" id="job" type="text" value="Ocean explorer")
          button.form__button(type="submit") Save
    .popup.page__popup.popup_type_add-place
      .popup__container
        button.popup__close-button.popup__close-button_type_add-place(type="button" aria-label="close icon")
        h2.popup__title New place
        form.popup__form.form.form_type_add-place(name="popup")
          label.form__label.visually-hidden(for="place")
            | Enter name of place
          input.form__input.form__input_type_place(name="place" id="place" type="text" placeholder="Name")
          label.form__label.visually-hidden(for="link")
            | Enter link to image
          input.form__input.form__input_type_url(name="link" id="link" type="url" placeholder="Link to picture")
          button.form__button(type="submit") Save
    .popup.page__popup.popup_type_image-place
      figure.image-place
        button.popup__close-button.popup__close-button_type_image-place(type="button" aria-label="close icon")
        img.image-place__image.image(alt="")
        figcaption.image-place__caption
